<!DOCTYPE html>
<html>
  <head>
    <title>Task Manager</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="index-page">
    <h1>Task Manager</h1>

    <nav>
      <a href="/">Active Tasks</a> | <a href="/history">View History</a> |
      <a href="/stats">View Stats</a>
    </nav>

    <form action="/add" method="POST" style="margin: 20px 0px">
      <input type="text" name="title" placeholder="New task title" required />
      <button type="submit">Add Task</button>
    </form>

    <ul>
      <% if(tasks.length === 0) { %>
      <li>No active tasks.</li>
      <% } else { %> <% tasks.forEach(task => { %>
      <li>
        <span><%= task.title %></span>
        <div class="task-actions">
          <a href="/edit/<%= task.id %>">Edit</a>
          <form
            action="/complete/<%= task.id %>"
            method="POST"
            style="display: inline"
          >
            <button type="submit" class="complete-btn">Complete</button>
          </form>
          <form
            action="/delete/<%= task.id %>"
            method="POST"
            style="display: inline"
          >
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </div>
      </li>
      <% }) %> <% } %>
    </ul>
  </body>
</html>
